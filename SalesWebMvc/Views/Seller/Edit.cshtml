@model SalesWebMvc.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]</h2>
<!-- Layout em bootstrap-->
<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <!-- col-md-4 é uma divisão de tela utilizada no bootstrap/ inicialmente a divisão começa com 12-->
        <form asp-action="Edit">
            <!--Inclui um campo oculto hidden com o Id do vendedor-->
            <input type="hidden" asp-for="Seller.Id" />
            <div class="form-group">
                <label asp-for="Seller.Name" class="control-label"></label>
                <input asp-for="Seller.Name" class="form-control" />
                <span asp-validation-for="Seller.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.Email" class="control-label"></label>
                <input asp-for="Seller.Email" class="form-control" />
                <span asp-validation-for="Seller.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BirtDate" class="control-label"></label>
                <input asp-for="Seller.BirtDate" class="form-control" />
                <span asp-validation-for="Seller.BirtDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.BaseSalary" class="control-label"></label>
                <input asp-for="Seller.BaseSalary" class="form-control" />
                <span asp-validation-for="Seller.BaseSalary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seller.DepartmentId" class="control-label"></label>
                <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control"></select>
                <!--asp-items: Ele vai construir os itens da caixa de seleção com base na coleção que
                passar que no caso o departamento a estrura começa qual vai ser a fonte de dados dessa coleção: Model.Departments,
                qual vai ser o segundo argumento: o atributo do objeto ID, qual atributo do objeto vai aparecer na caixa -->
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<!-- Um trexo de cod de js para habilitar as validaões no validation Summary para apresentar na interface do cliente -->
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
}